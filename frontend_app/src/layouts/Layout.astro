---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Recipe Explorer</title>
    <meta name="theme-color" content="#2563EB" />
    <link rel="stylesheet" href="/src/styles/theme.css" />
  </head>
  <body class="page">
    <ThemeToggle />
    <header class="navbar">
      <div class="container navbar-inner">
        <div class="brand text-title-md">
          <a href="/" aria-label="Recipe Explorer Home" style="color: inherit; text-decoration: none;">Recipe Explorer</a>
        </div>
        <nav class="hidden-sm">
          <slot name="navbar" />
        </nav>
      </div>
    </header>

    <main id="main" class="main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container" style="padding-block: var(--space-6); color: var(--color-text-muted); font-size: 0.9rem;">
        Â© <span id="year"></span> Recipe Explorer
      </div>
    </footer>

    <script>
      // update footer year without any extra dependencies
      const y = document.getElementById('year');
      if (y) y.textContent = String(new Date().getFullYear());
    </script>
  </body>
</html>
